.container {
	background-color: #f7f7f7;
	height: 100%;
}

.list {
	height: 100%;
}

.list .tip {
	text-align: center;
	height: 80px;
}

.list-item {
	background-color: #fff;
	margin-bottom: 10px;
	padding: 15px;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.list .list-item .tit {
	font-weight: bolder;
}

.list .list-item .info {
	margin-top: 10px;
}

.list .list-item .info .tag {
	border: 1px solid red;
	border-radius: 5px;
	color: red;
	font-size: 14px;
	padding: 0 2px;
	margin-right: 5px;
}

.list .list-item .info .user {
	color: gray;
	font-size: 14px;
}


.footer {
	position: fixed;
	bottom: 0;
	background-color: #ff0000;
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	color: white;
	text-align: center;
}